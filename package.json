{
  "name": "bun-turborepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint lint:root",
    "lint:root": "eslint . --ignore-pattern \"apps\" --ignore-pattern \"packages\" --fix --cache",
    "format": "oxfmt --ignore-path .oxfmtignore .",
    "format:check": "oxfmt --check --ignore-path .oxfmtignore .",
    "spell": "turbo run spell spell:root",
    "spell:root": "cspell \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\" \"!apps\" \"!packages\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean",
    "clean:deps": "turbo run clean:deps",
    "clean:artifacts": "turbo run clean:artifacts",
    "app:new": "turbo gen workspace",
    "app:copy": "turbo gen workspace --copy",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/spell-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cspell": "^9.6.0",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.32.0",
    "rimraf": "^6.0.1",
    "turbo": "^2.7.4"
  },
  "overrides": {
    "@types/node": "^24.10.9"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=22"
  },
  "packageManager": "bun@1.3.8",
  "trustedDependencies": [
    "cn-font-split",
    "esbuild",
    "koffi",
    "protobufjs"
  ]
}
