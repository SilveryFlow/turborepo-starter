{
  "name": "pnpm-turborepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint lint:root",
    "lint:root": "eslint . --ignore-pattern \"apps\" --ignore-pattern \"packages\" --fix --cache",
    "format": "turbo run format format:root",
    "format:root": "prettier --write --experimental-cli \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\" \"!apps\" \"!packages\" --ignore-unknown --cache --cache-location .prettiercache",
    "spell": "turbo run spell spell:root",
    "spell:root": "cspell \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\" \"!apps\" \"!packages\"",
    "check-types": "turbo run check-types",
    "app:new": "turbo gen workspace",
    "app:copy": "turbo gen workspace --copy",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/spell-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cspell": "^9.6.0",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "turbo": "^2.7.4"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=24",
    "npm": ">=11",
    "pnpm": ">=10"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^24.10.9"
    },
    "onlyBuiltDependencies": [
      "cn-font-split",
      "esbuild",
      "koffi",
      "protobufjs"
    ]
  }
}
