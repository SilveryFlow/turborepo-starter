{
  "name": "pnpm-turborepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format && prettier --write --experimental-cli \"*.{json,md}\" --ignore-unknown",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.8.0",
    "turbo": "^2.7.4",
    "@repo/prettier-config": "workspace:*"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=24",
    "npm": ">=11",
    "pnpm": ">=10"
  }
}
