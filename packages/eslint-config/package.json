{
  "name": "@repo/eslint-config",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --fix --cache",
    "format": "prettier --write --experimental-cli \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\" --ignore-unknown --cache --cache-location .prettiercache",
    "spell": "cspell \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\""
  },
  "exports": {
    "./base": "./src/base.js",
    "./vue": "./src/vue.js",
    "./vitest": "./src/vitest.js",
    "./vitest-vue": "./src/vitest-vue.js"
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-turbo": "^2.7.5",
    "eslint-plugin-vue": "~10.7.0",
    "globals": "^17.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.50.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "peerDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-turbo": "^2.7.5",
    "eslint-plugin-vue": "~10.7.0",
    "globals": "^17.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.50.0",
    "vue-eslint-parser": "^10.2.0"
  }
}
