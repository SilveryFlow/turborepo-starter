{
  "name": "@repo/typescript-config",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "format": "prettier --write --experimental-cli \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\" --ignore-unknown --cache --cache-location .prettiercache",
    "spell": "cspell \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\"",
    "clean": "rimraf node_modules",
    "clean:deps": "rimraf node_modules",
    "clean:artifacts": "echo \"No build artifacts to clean\""
  },
  "exports": {
    "./tsconfig.base.json": "./src/tsconfig.base.json",
    "./tsconfig.library.json": "./src/tsconfig.library.json",
    "./tsconfig.node.json": "./src/tsconfig.node.json",
    "./tsconfig.vitest.json": "./src/tsconfig.vitest.json",
    "./tsconfig.vue.json": "./src/tsconfig.vue.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.9",
    "@vue/tsconfig": "^0.8.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
