{
  "name": "@repo/template-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "run-s lint:*",
    "lint:oxlint": "oxlint . --fix",
    "lint:eslint": "eslint . --fix --cache",
    "format": "prettier --write --experimental-cli \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\" --ignore-unknown --cache --cache-location .prettiercache",
    "spell": "cspell \"**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}\"",
    "clean": "rimraf dist node_modules",
    "clean:deps": "rimraf node_modules",
    "clean:artifacts": "rimraf dist"
  },
  "dependencies": {
    "@csstools/normalize.css": "^12.1.1",
    "@repo/ui": "workspace:*",
    "@repo/utils": "workspace:*",
    "@vueuse/core": "^14.1.0",
    "@vueuse/router": "^14.1.0",
    "element-plus": "^2.13.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-echarts": "^8.0.1",
    "vue-router": "^5.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/test-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/unocss-config": "workspace:*",
    "@repo/vite-config": "workspace:*",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.4",
    "@unocss/eslint-config": "^66.6.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "~1.42.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.42.0",
    "prettier": "3.7.4",
    "sass-embedded": "^1.97.3",
    "typescript": "~5.9.3",
    "unocss": "^66.6.0",
    "vite": "^7.3.1",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.2"
  }
}
